{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strict":true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports":true,
     
      "lib": [
        "es2018",
        "dom",
        "esnext",
        "DOM"
      ]
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS",
          "jsx": "react-jsx"
        }
      }
  }