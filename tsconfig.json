{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strict":true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports":true,
     
      "lib": [
        "es2018",
        "dom",
        "esnext",
        "DOM"
      ]
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS",
          "jsx": "react-jsx"
        }
      },
    "include": [
      "./config/jest/setupTests.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./src/**/*.scss",
      ".eslintrc.js",
      "webpack.config.ts",
      "./json-server/**/*.json",
      "./json-server/**/*.js",
      "./json-server/index.js"


    ]
  }